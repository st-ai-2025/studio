rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{chatId} {
      // Allow users to create messages if the message's userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users should not be able to read, update or delete messages in this simplified flow.
      allow read, update, delete: if false;
    }
  }
}
