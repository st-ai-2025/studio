
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow a user to create, read, and update their own user document.
      allow create, read, update: if request.auth.uid == userId;

      // Allow a user to read and write to their own 'chats' subcollection.
      match /chats/{chatId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
