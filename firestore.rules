rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and create their own chat messages.
    match /chats/{messageId} {
      // A user can query for their own messages.
      allow list: if request.auth != null && request.auth.uid == request.query.filters.userId;
      
      // A user can read a specific message if they are the owner.
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;

      // A user can create a message if they are the owner.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
