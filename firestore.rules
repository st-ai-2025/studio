
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create their own user document, but not read others'
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;

      // Allow users to read and write to subcollections under their own user document
      match /{allPaths=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
