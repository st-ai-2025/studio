rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the entire database if the user is authenticated.
    // WARNING: This is for development and debugging. You should implement
    // more granular security rules before going to production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
